# movie_ticket_system.py

# ===== Constants / Definitions =====
WEEKDAY_PRICE = 200.00
WEEKEND_PRICE = 300.00
MATINEE_END = 12
STUDENT_DISCOUNT_RATE = 0.20
SENIOR_DISCOUNT_RATE = 0.30
MATINEE_DISCOUNT_RATE = 0.10
GROUP_DISCOUNT_RATE = 0.05
GROUP_MIN_TICKETS = 5

# ===== Part A: User Inputs =====
day = input("Day type (weekday/weekend): ").lower()
customer = input("Customer type (regular/student/senior): ").lower()
time = int(input("Movie time (9â€“22): "))
tickets = int(input("Number of tickets: "))

# ===== Part B: Display Selection =====
print(f"\n=== MOVIE TICKET SYSTEM ===")
print(f"Day: {day}")
print(f"Customer type: {customer}")
print(f"Show time: {time}")
print(f"Number of tickets: {tickets}")

# ===== Part C: Calculations (Sequential Discounts) =====
if day == "weekend":
    base_price = WEEKEND_PRICE
else:
    base_price = WEEKDAY_PRICE

subtotal = base_price * tickets
current_balance = subtotal

# 1. Student/Senior Discount
student_disc_amt = 0
senior_disc_amt = 0
if customer == "student":
    student_disc_amt = current_balance * STUDENT_DISCOUNT_RATE
    current_balance -= student_disc_amt
elif customer == "senior":
    senior_disc_amt = current_balance * SENIOR_DISCOUNT_RATE
    current_balance -= senior_disc_amt

# 2. Matinee Discount
matinee_disc_amt = 0
if time < MATINEE_END:
    matinee_disc_amt = current_balance * MATINEE_DISCOUNT_RATE
    current_balance -= matinee_disc_amt

# 3. Group Discount
group_disc_amt = 0
if tickets >= GROUP_MIN_TICKETS:
    group_disc_amt = current_balance * GROUP_DISCOUNT_RATE
    current_balance -= group_disc_amt

# ===== Part D: Receipt Output =====
print(f"\n--- RECEIPT ---")
print(f"Base price: {base_price:.2f} x {tickets} = {subtotal:.2f}")

if student_disc_amt > 0:
    print(f"Student discount (20%): -{student_disc_amt:.2f}")
if senior_disc_amt > 0:
    print(f"Senior discount (30%): -{senior_disc_amt:.2f}")
if matinee_disc_amt > 0:
    print(f"Matinee discount (10%): -{matinee_disc_amt:.2f}")
if group_disc_amt > 0:
    print(f"Group discount (5%): -{group_disc_amt:.2f}")

print(f"\nTOTAL: {current_balance:.2f}")
print("Thank you for your purchase!")
