print("String indexing and Slicing Practice")
full_name = input ("Enter your full name: ")
lingth = len(full_name)

if len(full_name) > 0:
    print("first character: ", full_name[0])
    print("last character: ", full_name[-1])
    print("First 5 character: ", full_name[:5])
    print("Name in reverse: ",full_name [::-1])
    print("Every other character: ", full_name[::2])
    if lingth > 0:
        middle = lingth // 2
        print("middle characterrt: ", full_name[middle -1:middle +1])
    else:
        print("middle character: ", full_name(middle))
    
else:
    print("invalid")
