# text_processor.py

sentence = input("Enter a sentence: ")

print("--- Case Transformations ---")
print("Uppercase:", sentence.upper())
print("Lowercase:", sentence.lower())
print("Title Case:", sentence.title())

count_a = sentence.lower().count('a')
print("Number of times 'a' appears:", count_a)

trimmed_sentence = sentence.strip()
print("After removing leading/trailing spaces:")
print(trimmed_sentence)

underscored_sentence = sentence.replace(" ", "_")
print("After replacing spaces with underscores:")
print(underscored_sentence)

print("--- Words in the sentence ---")
words = sentence.split()
for word in words:
    print(word)
