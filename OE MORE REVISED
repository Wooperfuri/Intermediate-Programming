# movie_ticket_system.py

# ===== Constants / Definitions =====
WEEKDAY_PRICE = 200
WEEKEND_PRICE = 300
OPENING_HOUR = 9
CLOSING_HOUR = 22
MATINEE_END = 12

STUDENT_DISCOUNT = 0.20
SENIOR_DISCOUNT = 0.30
MATINEE_DISCOUNT = 0.10
GROUP_DISCOUNT = 0.05
GROUP_MIN_TICKETS = 5

# ===== Part A: User Inputs with Validation =====

# Day input
while True:
    day = input("Day type (weekday/weekend): ").lower()
    if day in ["weekday", "weekend"]:
        break
    print("Invalid choice. Please type 'weekday' or 'weekend'.")

# Customer input
while True:
    customer = input("Customer type (regular/student/senior): ").lower()
    if customer in ["regular", "student", "senior"]:
        break
    print("Invalid choice. Choose regular, student, or senior.")

# Movie time input
while True:
    try:
        time = int(input("Movie time (9–22 in 24hr format): "))
        if OPENING_HOUR <= time <= CLOSING_HOUR:
            break
        print("Cinema operates only from 9 to 22.")
    except ValueError:
        print("Invalid input. Please enter a number.")

# Ticket count input
while True:
    try:
        tickets = int(input("Number of tickets: "))
        if tickets > 0:
            break
        print("Ticket count must be positive.")
    except ValueError:
        print("Invalid input. Please enter a number.")

# ===== Part B: Base Pricing =====
if day == "weekday":
    base_price = WEEKDAY_PRICE
else:
    base_price = WEEKEND_PRICE

subtotal = base_price * tickets
discount = 0

# ===== Part C: Discounts =====
if customer == "student":
    discount += subtotal * STUDENT_DISCOUNT
elif customer == "senior":
    discount += subtotal * SENIOR_DISCOUNT

if time < MATINEE_END:
    discount += subtotal * MATINEE_DISCOUNT

if tickets >= GROUP_MIN_TICKETS:
    discount += subtotal * GROUP_DISCOUNT

# ===== Part E: Receipt =====
final_total = subtotal - discount

print("\n----- ITEMIZED RECEIPT -----")
print("Base price per ticket: ₱", base_price)
print("Number of tickets:", tickets)
print("Subtotal: ₱", subtotal)
print("Total discounts: ₱", round(discount, 2))
print("Final Total: ₱", round(final_total, 2))
